/* pages/me/me.wxss */
.container{
    width:750rpx;
}
.me-title{
    width: 750rpx;
    padding: 50rpx 0;
    background: #00B26A;
}
.title-img{
    width:200rpx;
    height:200rpx;
    border-radius: 100%;
    overflow: hidden;
    margin:0 auto;
}
.title-img image{
    display:block;
    width:200rpx;
    height:200rpx;
}
.title-name{
    margin-top:20rpx;
    text-align: center;
    color:#fff;
    font-size:16px;
}
.me-content{
    margin-top: 20rpx;
    padding: 0 0 0 20rpx;
}
.content-list{
    line-height: 100rpx;
    border-bottom: 1px solid #ddd;
    color:#999;
    font-size:13px;
    position:relative;
}
.content-list image{
    position:absolute;
    top:30rpx;
    right:20rpx;
    display:block;
    width:40rpx;
    height: 40rpx;
}